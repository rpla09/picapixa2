  $end_date = $form_state->getValue('field_end_datetime')[0]['value'] ?? NULL;

  // Validaci√≥n m√©dica.
  if ($status === 'resolved' && !$single_event && empty($end_date)) {
    $form_state->setErrorByName(
      'field_end_datetime',
