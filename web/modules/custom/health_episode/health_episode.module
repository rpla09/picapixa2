    if (isset($single_event_value['value'])) {
      $single_event = $single_event_value['value'];
    }
    elseif (isset($single_event_value[0]['value'])) {
      $single_event = $single_event_value[0]['value'];
    }
    else {
      $single_event = 0;
    }
  } else {
    $single_event = $single_event_value;
  }

